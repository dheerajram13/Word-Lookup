{
	"manifest_version": 2,
	"name": "DefinitionLookup",
	"version": "1.0",
	"description": "Lookup a definition, synonym for the word",

	"icons": {
		"128": "icons/icon.png",
		"48": "icons/icon.png",
		"16": "icons/icon.png"
	},

	"browser_action": {
		"default_icon": "icons/icon.png",
		"default_popup": "src/index.html"
	},

	"background": {
		"scripts": ["src/content.js"],
		"persistent": false
	},

	"permissions": [
		"tabs",
		"contextMenus"
	]
}
